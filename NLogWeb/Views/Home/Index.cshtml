@model List<NLogWeb.Models.Employee>;

<title>Employee Details</title>
<body>
    <table class="table table-dark table-striped">
        <tr>
            <th>
                ID
            </th>
            <th>Name</th>
            <th>Email</th>
            <th>Hire Date</th>
            <th>Job</th>
            <th>Salary</th>
            <th>Department</th>
            <th>AddOn</th>
            <th>Update On</th>
            <th>Status</th>
            @*<th>Photo</th>*@
            <th>Action</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.HireDate.Date</td>
                <td>@item.Job</td>
                <td>@item.Salary</td>
                <td>@item.Department</td>
                <td>@item.AddOn.Date</td>
                <td>@item.UpdateOn.Date</td>
                <td>@item.RecStatus</td>
                @*<td>@item.PhotoPath</td>*@
                <td role="group">
                    <a href="/Home/EmpDetails/@item.Id"><i class="bi bi-view-list"></i></a>
                    <a asp-action="Update" asp-controller="Home" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id"><i class="bi bi-archive-fill"></i></a>
                </td>
            </tr>
        }

    </table>
    <a asp-action="GalleryUpload" asp-controller="Home" class="btn btn-primary">Upload Gallery</a>
</body>
